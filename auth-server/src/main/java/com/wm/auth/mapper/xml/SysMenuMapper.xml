<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wm.auth.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wm.auth.model.entity.SysMenu">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="name" property="name" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="icon" property="icon" />
        <result column="menu_type" property="menuType" />
        <result column="sort" property="sort" />
        <result column="visible" property="visible" />
        <result column="redirect" property="redirect" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="findMenuByRoleId" resultMap="BaseResultMap">
        SELECT
            a.id,
            a.parent_id,
            a.`name`,
            a.path,
            a.component,
            a.icon,
            a.menu_type,
            a.sort,
            a.visible,
            a.redirect,
            a.description,
            a.create_time,
            a.update_time
        FROM
            sys_menu a
                INNER JOIN sys_role_menu b ON a.id = b.menu_id
                INNER JOIN sys_role c ON b.role_id = c.id
        WHERE
            c.role_code = #{roleCode}
          and a.visible=1
    </select>

</mapper>
